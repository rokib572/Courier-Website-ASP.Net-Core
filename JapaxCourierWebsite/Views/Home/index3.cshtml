<script>
    $(document).ready(function () {

        typing(0, $('.typewriter-text').data('text'));
        function typing(index, text) {

            var textIndex = 1;
            var time = 0;
            var tmp = setInterval(function () {
                if (textIndex < text[index].length + 1) {
                    $('.typewriter-text').text(text[index].substr(0, textIndex));
                    if (index == 0) {
                        time = 1500;
                    }
                    if (index == 1) {
                        time = 700;
                    }
                    if (index == 2) {
                        time = 500;
                    }
                    setTimeout(function () {
                        $('#banner-top-img-' + index).show();
                        if (index == 1) {
                            $('#banner-top-clock-icon-left').show();
                            $('#banner-top-clock-icon-right').show();
                        }
                    }, time);
                    $('#banner-top-span-' + index).fadeIn(3000);
                    textIndex++;
                } else {
                    setTimeout(function () {
                        deleting(index, text);
                        $('#banner-top-img-' + index).fadeOut(1000);
                        $('#banner-top-span-' + index).fadeOut(3000);
                        $('#banner-top-clock-icon-left').fadeOut(1000);
                        $('#banner-top-clock-icon-right').fadeOut(1000);
                    }, 1000);
                    clearInterval(tmp);
                }
            }, 120);
        }

        function deleting(index, text) {
            var textIndex = text[index].length;
            var tmp = setInterval(function () {
                if (textIndex + 1 > 0) {
                    $('.typewriter-text').text(text[index].substr(0, textIndex));
                    textIndex--;
                } else {
                    index++;
                    if (index == text.length) { index = 0; }
                    typing(index, text);
                    clearInterval(tmp);
                }
            }, 120)
        }
    });


    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 300) {
                $(".play-icon").css("display", "flex")
            }
            else {
                $(".play-icon").css("display", "none")
            }
        });
    });

    var canvas = {
        element: document.getElementById('canvas'),
        width: $(document).width(),
        height: 400,
        initialize: function () {
            this.element.style.width = this.width + 'px';
            this.element.style.height = this.height + 'px';
            // document.body.appendChild(this.element);
        }
    };

    var Ball = {
        create: function (img, dx, dy) {
            var newBall = Object.create(this);
            newBall.dx = dx;
            newBall.dy = dy;
            newBall.width = 100;
            newBall.height = 100;
            newBall.element = document.createElement('div');
            newBall.element.style.backgroundImage = img;
            newBall.element.style.width = newBall.width + 'px';
            newBall.element.style.height = newBall.height + 'px';
            newBall.element.className += ' ball';
            newBall.width = parseInt(newBall.element.style.width);
            newBall.height = parseInt(newBall.element.style.height);
            canvas.element.appendChild(newBall.element);
            return newBall;
        },
        moveTo: function (x, y) {
            this.element.style.left = x + 'px';
            this.element.style.top = y + 'px';
        },
        changeDirectionIfNecessary: function (x, y) {
            if (x < 0 || x > canvas.width - this.width) {
                this.dx = -this.dx;
            }
            if (y < 0 || y > canvas.height - this.height) {
                this.dy = -this.dy;
            }
        },
        draw: function (x, y) {
            this.moveTo(x, y);
            var ball = this;
            setTimeout(function () {
                ball.changeDirectionIfNecessary(x, y);
                ball.draw(x + ball.dx, y + ball.dy);
            }, 1000 / 30);
        }
    };

    canvas.initialize();
    var ball1 = Ball.create("url('../images/home/banglalink.png')", 4, 3);
    var ball2 = Ball.create("url('../images/home/robi.png')", 1, 5);
    //var ball3 = Ball.create("url('../images/home/')", 2, 6);
    var ball4 = Ball.create("url('../images/home/kfc.png')", 3, 6);
    ball1.draw(70, 0);
    ball2.draw(20, 200);
    //ball3.draw(50, 30);
    ball4.draw(50, 20);


    let allIconsDoms = document.querySelectorAll('.around-mobile-circled-icons span');
    let startAngle = 180;
    let endAngle = 360; // 45deg
    let eachAngle = (endAngle - startAngle) / (allIconsDoms.length - 1);
    const radius = 130; // same as half width of .around-mobile-circled-icons
    document.querySelector('.around-mobile-circled-icons').setAttribute("style", `height: ${2 * radius}px; width: ${2 * radius}px`);
    document.querySelector('#circle-svg-animation').setAttribute("style", `height: ${2 * radius}px; width: ${2 * radius}px`);

    let strokeWidth = 1;
    document.querySelector('#circle-svg-animation').setAttribute("viewBox", `0 0 ${2 * (radius + strokeWidth)} ${2 * (radius + strokeWidth)}`);
    document.querySelector('#circle-svg-animation .circle').setAttribute("stroke-width", strokeWidth)
    document.querySelector('#circle-svg-animation .circle').setAttribute("transform", `rotate(180,${radius},${radius})`)
    document.querySelector('#circle-svg-animation .circle').setAttribute("cx", radius - strokeWidth)
    document.querySelector('#circle-svg-animation .circle').setAttribute("cy", radius - strokeWidth)
    document.querySelector('#circle-svg-animation .circle').setAttribute("r", radius)

    allIconsDoms.forEach((el, i) => {

        let radian_value = (startAngle + eachAngle * i) * Math.PI / 180
        let X = radius * Math.cos(radian_value)
        let Y = radius * Math.sin(radian_value)

        el.setAttribute("style", `transform: translate(${X}px, ${Y}px)`);
    });


    const circle = document.querySelector('#circle-svg-animation .circle');
    const angle_increment = 10;
    const interval = 100;

    $('.banner-slider').on('beforeChange', function (event, slick, currentSlide, nextSlide) {
        if (currentSlide == 4) return
        let angle = currentSlide * 100;
        let constAngle = currentSlide * 100;
        if (constAngle >= 480) {
            angle = 0;
            constAngle = 0;
        }

        window.timer = window.setInterval(function () {
            circle.setAttribute("stroke-dasharray", angle + ", 20000");

            if (angle >= constAngle + 120) {
                window.clearInterval(window.timer);
            }
            angle += angle_increment;
        }.bind(this), interval);

    })

    $('.banner-slider').on('afterChange', function (event, slick, currentSlide, nextSlide) {
        if (currentSlide == 0) $('.around-mobile-circled-icons span').removeClass("active-banner-icon-slide");
        $('.around-mobile-circled-icons span').removeClass("active-banner-icon-current-slide");
        $(`#icon-${currentSlide}`).addClass("active-banner-icon-slide active-banner-icon-current-slide");
    });
</script>
